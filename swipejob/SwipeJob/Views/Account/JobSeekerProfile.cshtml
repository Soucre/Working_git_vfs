@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="job-seeker-profile" ng-cloak ng-controller="jobSeekerProfileController" ng-init="Init()">
    <div class="container">
        <div class="profile">
            <div class="row">
                <div class="col-md-4">
                    <div class="avatar">
                        <div class="image">
                            <label for="file-upload" class="file-upload">
                                <i class="fa fa-edit"></i> Change profile picture
                            </label>
                            <input id="file-upload" name="file" type="file" class="upload" onchange="angular.element(this).scope().fileChanged(this) " accept="image/*">
                            <img class="img-thumbnail" data-ng-src="{{getImage(Model.JobSeeker.AvartarImage)}}" />
                        </div>
                        <h3>{{Model.JobSeeker.FullName}}</h3>
                    </div>
                    <div class="tab-profile">
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#personalInfo" aria-controls="personalInfo" role="tab" data-toggle="tab">
                                    <i class="fa fa-credit-card-alt"></i>Personnal Info
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#experienceLevel" aria-controls="experienceLevel" role="tab" data-toggle="tab">
                                    <i class="fa fa-briefcase"></i>Experience Level
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#interestIn" aria-controls="interestIn" role="tab" data-toggle="tab">
                                    <i class="fa fa-heart-o"></i>Interest in
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#additionalInfo" aria-controls="additionalInfo" role="tab" data-toggle="tab">
                                    <i class="fa fa-share-alt"></i>Additional Info
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="personalInfo">
                            <div class="personalInfo">
                                @Html.Partial("~/Views/Partial/JobSeekerProfilePersonalInfoPartial.cshtml")
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="experienceLevel">
                            <div class="experienceLevel">
                                @Html.Partial("~/Views/Partial/JobSeekerProfileExperienceLevelPartial.cshtml")
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="interestIn">
                            <div class="interestIn">
                                @Html.Partial("~/Views/Partial/JobSeekerProfileInterestInPartial.cshtml")
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="additionalInfo">
                            <div class="additionalInfo">
                                @Html.Partial("~/Views/Partial/JobSeekerProfileAdditionalInfoPartial.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Content/js/SwipeJob/Account/jobSeekerProfileController.js")
}
