<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />    
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <link href="~/Scripts/jquery-ui/jquery-ui.css" rel="stylesheet" />
    @*<script type="text/javascript" src="~/Scripts/chart.js"></script>*@
    @*<link href="~/css/loginForm.css" rel="stylesheet" />*@
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="header noPrint">
        <!-- <img src="images/bg_header.png" alt=""> -->
        <div class="logo">
            <img src="/images/logo.png">
        </div> <!-- logo -->
        <div class="slogan">
            <img src="/images/slogan.png">
        </div> <!-- slogan -->
        <div class="login_header">
            <ul>
                <li><a href="http://www.vfs.com.vn/tabid/97/lien-he.aspx">Liên hệ</a></li>
                <li>
                    
                    @*<a href="#" title="đăng nhập">Đăng xuất</a>*@
                    @using (Html.BeginForm("LogOff", "FrontAccount", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()"><span><i class="fa fa-sign-out"></i> Đăng xuất</span></a>
                    }
                </li>
            </ul>
            <div class="hotline">
                <span style="color: #bfbfbf;">Xin Chào: @User.Identity.Name.ToUpper()
                @{
                    if (Request.Cookies["AccountType"] != null)
                    {
                        <text>[@Request.Cookies["AccountType"].Value]</text> 
                    }
                }
                </span>
            </div>
        </div> <!-- login_header -->

    </div> <!-- header -->

    <div class="menu noPrint">
        <div class="list_menu">
            <ul>
                <li><a href="/">Trang Chủ</a></li>
                <li><a target="_blank" href="http://www.vfs.com.vn/tabid/99/gioi-thieu-vfs.aspx">Giới thiệu VFS</a></li>
                <li><a target="_blank" href="http://www.vfs.com.vn/tabid/118/san-pham-dich-vu.aspx">Sản phẩm - Dịch vụ</a></li>
                <li><a target="_blank" href="http://www.vfs.com.vn/tabid/409/tra-cuu-chung-khoan.aspx">Tra cứu CK</a></li>
                <li><a target="_blank" href="http://www.vfs.com.vn/tabid/127/tin-tuc.aspx">Tin tức</a></li>
                <li><a target="_blank" href="http://www.vfs.com.vn/tabid/153/goc-phan-tich.aspx">Góc phân tích</a></li>
                <li><a target="_blank" href="http://www.vfs.com.vn/tabid/95/lich-thuc-hien-quyen-chung-khoan.aspx">Lịch thực hiện quyền CK</a></li>
            </ul>
        </div>
        @*<div class="list_menu2">
            <ul>
                <li class="taisan"><a href="taisan.aspx">Báo cáo tài sản</a></li>
                <li class="tienvano"><a href="tienvano.aspx">Báo cáo tiền và nợ</a></li>
            </ul>
        </div>*@
    </div> <!-- menu -->

    <div class="clear">

    </div>
    <div class="vfs-wap-center">
        <div class="wap-center">
            <div class="default-center">
                <div class="default-center-menu-left">
                    <div class="clear-left">
                        <ul>
                            <li id="menu-1"><a href="/">Cổ tức</a></li>
                            <li id="menu-2"><a href="/Research">Báo cáo</a></li>
                            <li id="menu-3"><a href="#">Danh mục khuyến nghị</a></li>
                            <li id="menu-4"><a href="#">Đầu tư</a></li>
                        </ul>
                    </div>                    
                </div>
                <div class="default-center-menu-right">
                    <div class="DescriptionTile">
                        <p>
                            @ViewBag.DescriptionTile                            
                        </p>
                    </div>
                    @RenderBody()                    
                </div>

            </div>
        </div>
    </div>
