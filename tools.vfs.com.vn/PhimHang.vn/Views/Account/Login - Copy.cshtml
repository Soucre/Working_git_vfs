@model PhimHang.Models.LoginViewModel

    @{
        ViewBag.Title = "Đăng nhập";
    }


	<!-- start logo -->
<div id="logo-login">
    
</div>
<!-- end logo -->

<div class="clear"></div>

<!--  start loginbox ................................................................................. -->
<div id="loginbox">

    <!--  start login-inner -->
    <div id="login-inner">
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <th>Username</th>
                <td>@Html.TextBoxFor(m => m.UserName, new { @class = "login-inp" })</td>
                
                @Html.ValidationMessageFor(m => m.UserName)
            </tr>
            <tr>
                <th>Password</th>
               
               
                <td>@Html.PasswordFor(m => m.Password, new { @class = "login-inp" })</td>
                @Html.ValidationMessageFor(m => m.Password)
            </tr>
            <tr>
                <th></th>
                <td valign="top">@Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox-size", id = "login-check" })<label for="login-check">Remember me</label></td>
            </tr>
            <tr>
                <th></th>
                <td><input type="submit" class="submit-login" value="Đăng nhập" /></td>
            </tr>
        </table>
}
    </div>
    <!--  end login-inner -->
    <div class="clear"></div>
    <a href="" class="forgot-pwd" style="color: white;">Forgot Password?</a>
</div>
<!--  end loginbox -->
<!--  start forgotbox ................................................................................... -->
<div id="forgotbox">
    <div id="forgotbox-text">Please send us your email and we'll reset your password.</div>
    <!--  start forgot-inner -->
    <div id="forgot-inner">
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <th>Email address:</th>
                <td><input type="text" value="" class="login-inp" /></td>
            </tr>
            <tr>
                <th> </th>
                <td><input type="button" class="submit-login" /></td>
            </tr>
        </table>
    </div>
    <!--  end forgot-inner -->
    <div class="clear"></div>
    <a href="" class="back-login">Back to login</a>
</div>
<!--  end forgotbox -->
</div>
<!-- End: login-holder -->